<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96ffffff">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:number_of_tabs="three"
        app:starting_position="one"
        app:tab_color="#00d3fd"
        app:button_color="#FFFFFF"
        app:text_color="#00d3fd"

        app:icon_one="@mipmap/a1"
        app:icon_two="@mipmap/b1"
        app:icon_three="@mipmap/c1"

        app:text_one=""
        app:text_two=""
        app:text_three=""/>

</RelativeLayout>